<synth>
	<style id="basic">
    	<font name="Helvetica" size="12"/>
      <opaque value="TRUE" />
   		<state>
         <color value="BLACK" type="TEXT_FOREGROUND"/>
         <!-- <color value="BLACK" type="FOREGROUND"/> -->
<!--    			 <imagePainter method="buttonBackground" path="img/button.png"
                           sourceInsets="10 10 10 10" /> -->
    	</state>
  	</style>


    <!-- BUTTON STYLE -->
    <style id="button">
      <insets top="15" left="10" bottom="15" right="10"/>
      <state> 
                  <imagePainter method="buttonBackground" path="/img/button1.png"
                           sourceInsets="3 3 3 3" />
                <font name="Helvetica" size="12"/>
                <color type="TEXT_FOREGROUND" value="WHITE" />
      </state>
     <!--  <state value="PRESSED"> 
                  <imagePainter method="buttonBackground" path="/img/button-pressed.png"
                           sourceInsets="3 3 3 3" />
                <font name="Helvetica" size="12"/>
                <color type="TEXT_FOREGROUND" value="WHITE" />
      </state> -->
