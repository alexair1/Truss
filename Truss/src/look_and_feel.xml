    <!-- SCROLL BAR THUMB STYLE -->
    <style id="scrollbarthumb">
      <insets top="15" left="10" bottom="15" right="10"/>
      <state>
                  <imagePainter method="scrollBarThumbBackground" path="/img/scroll-bar-thumb.png"
                           sourceInsets="10 10 10 10" />
                <font name="Helvetica" size="12"/>
                <color type="BACKGROUND" value="#FFFFFF" />
      </state>
    </style> 

    <!-- TABLE STYLE -->
    <style id="table">
      <insets top="15" left="10" bottom="15" right="10"/>
      <state>
                 <!--  <imagePainter method="separatorBackground" path="/img/separator.png"
                           sourceInsets="10 10 10 10" /> -->
                <!-- <font name="Helvetica" size="12"/> -->
