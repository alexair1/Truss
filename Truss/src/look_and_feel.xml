    <style id="slider">
      <!-- <insets top="15" left="10" bottom="15" right="10"/> -->
      <state>
         <color value="WHITE" type="BACKGROUND"/>
      </state>
    </style>

    <!-- SLIDER TRACK STYLE -->
    <style id="slidertrack">
