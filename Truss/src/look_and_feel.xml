    <!-- SEPARATOR STYLE -->
    <style id="separator">
      <insets top="15" left="10" bottom="15" right="10"/>
      <state>
                  <imagePainter method="separatorBackground" path="/img/separator.png"
                           sourceInsets="10 10 10 10" />
                <!-- <font name="Helvetica" size="12"/> -->
                <!-- <color type="TEXT_FOREGROUND" value="WHITE" /> -->
      </state>
    </style>

	<bind style="basic" type="region" key=".*" />
  <bind style="button" type="region" key="Button" />
  <bind style="slider" type="region" key="Slider" />
  <bind style="slidertrack" type="region" key="SliderTrack" />
   <bind style="sliderthumb" type="region" key="SliderThumb" />
   <bind style="spinner" type="region" key="Spinner" />
